<div class='row'>
  <%= form_for [@vehicle, @service] do |f| %>
    <div class='row'>
      <div class="input-field col s12">
      <%= f.text_field :name %>
      <%= f.label :service, autofocus: true %>
      </div>
    </div>

    <div class='row'>
      <div class="input-field col s12">
      <label>Description</label>
      <%= f.text_area :description, class: 'materialize-textarea' %>
      </div>
    </div>

    <div class='row'>
      <div class="input-field col s12">
      <label>Milage(required)</label>
      <%= f.text_field :mileage, required: true %>
      </div>
    </div>

    <div class='row'>
      <label>Provider</label>
      <div class="input-field col s2">
        <%= f.select :provider, ['Self', 'Shop'], {}, class: 'browser-default' %>
      </div> 
    </div>

    <div class='row'>
      <label>Date</label>
      <div class="input-field col s2">

      <%= f.date_field :date %>
      <input type="date" class="datepicker">
      </div>
    </div>     

    <div class='row'>
      <label>File</label>
      <div class="file-field input-field">
        <div class="btn">
          <span>File</span>
          <%= f.file_field :avatar %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
    </div>
    <br />

    <div class='row'>
      <div class="input-field col s12">
        <%= f.submit 'Submit', class: 'btn' %>
      </div>
    </div>
    
  <% end %>
</div>