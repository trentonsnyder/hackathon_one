<div class='row'>
  <%= form_for @vehicle do |f| %>
    <div class='row'>
      <div class="input-field col s12">
      <label>Make</label>
      <%= f.text_field :make, autofocus: true, required: true %>
      </div>
    </div>

    <div class='row'>
      <div class="input-field col s12">
      <label>Model</label>
      <%= f.text_field :model %>
      </div>
    </div>

    <div class='row'>
      <div class="input-field col s12">
      <label>Year</label>
      <%= f.number_field :year, min: 1950, max: 2016, required: true %>
      </div>
    </div>

    <div class='row'>
      <label>File</label>
      <div class="file-field input-field">
        <div class="btn">
          <span>File</span>
          <%= f.file_field :avatar %>
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
    </div>
    <br />
    
    
    <%= f.submit 'Submit', class: 'btn' %>
  <% end %>
</div>